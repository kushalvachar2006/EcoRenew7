<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Waste_Management" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Other theme attributes -->
        <item name="android:largeScreens">true</item>
    </style>
    <style name="CustomEditTextStyle" >
        <item name="android:textColor">#000000</item>
        <item name="android:padding">15dp</item>
        <item name="android:background">@drawable/customedittextstyle</item>
        <item name="android:textSize">16sp</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Hint1" parent="CustomEditTextStyle">
        <item name="android:hint">Email</item>
        <item name="hintEnabled">true</item>
    </style>
    <style name="Hint2" parent="CustomEditTextStyle">
        <item name="android:hint">Password</item>
    </style>
    <style name="Hint3" parent="CustomEditTextStyle">
        <item name="android:hint">Mobile Number</item>
    </style>
    <style name="Hint4" parent="CustomEditTextStyle">
        <item name="android:hint">Username</item>
    </style>
</resources>
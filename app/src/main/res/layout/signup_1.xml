<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp"
    tools:context=".SignUp_1">
    <ImageView
        android:id="@+id/sign_up_1_img"
        android:layout_width="161dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="30dp"
        android:src="@drawable/logo1"
        android:transitionName="sharedImage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sign_up"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/sign_up_1_img"
        android:text="Sign Up"
        android:textColor="#4CAF50"
        android:fontFamily="serif-monospace"
        android:textStyle="bold"
        android:textSize="40dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign_up"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp">
        <TextView
            android:id="@+id/Enter_your_details"
            android:layout_width="wrap_content"
            android:textSize="18dp"
            android:fontFamily="sans-serif-black"
            android:layout_height="wrap_content"
            android:text="Enter your Deatils"/>

       <EditText
            android:layout_below="@id/Enter_your_details"
            android:id="@+id/fullname"
            android:layout_marginTop="10dp"
            style="@style/CustomEditTextStyle"
            android:hint="Full Name"
            android:layout_width="350dp"
            android:inputType="textPersonName"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/email_id"
            style="@style/CustomEditTextStyle"
            android:hint="Email"
            android:layout_marginTop="10dp"
            android:layout_below="@id/fullname"
            android:layout_width="350dp"
            android:inputType="textEmailAddress"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/username1"
            style="@style/Hint4"
            android:layout_below="@id/email_id"
            android:layout_marginTop="10dp"
            android:layout_width="350dp"
            android:inputType="textEmailAddress"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/password1"
            style="@style/Hint2"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/username1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:inputType="textPassword" />

        <CheckBox
            android:id="@+id/show_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/password1"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="10dp"
            android:textSize="13dp"
            android:text="Show Password"
            android:alpha="0.7"/>
        <Button
            android:id="@+id/next_btn"
            style="@style/CustomEditTextStyle"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_below="@id/show_password"
            android:layout_centerInParent="true"
            android:backgroundTint="#4CAF50"
            android:layout_marginTop="15dp"
            android:text="Next"
            android:textColor="@color/white" />
    </RelativeLayout>

</RelativeLayout>